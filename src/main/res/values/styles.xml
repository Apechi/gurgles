<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!--
      Base application theme, dependent on API level. This theme is
      replaced by AppBaseTheme from res/values-vXX/styles.xml on newer
      devices.
  -->
  <style name="AppBaseTheme" parent="android:Theme.Holo">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->
  </style>

  <style name="AppCyanBaseTheme" parent="android:Theme.Holo">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->

    <item name="android:actionBarStyle">@style/actionBarCyanStyle</item>

  </style>

  <style name="AppMagentaBaseTheme" parent="android:Theme.Holo">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->

    <item name="android:actionBarStyle">@style/actionBarMagentaStyle</item>

  </style>

  <style name="AppOrangeBaseTheme" parent="android:Theme.Holo">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->

    <item name="android:actionBarStyle">@style/actionBarOrangeStyle</item>

  </style>

  <!-- Application theme. -->
  <style name="AppTheme" parent="AppBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->

    <item name="android:textAppearanceLarge">
      @style/textAppearanceLargeBold
    </item>
    <item name="box">@drawable/box</item>
    <item name="key">@drawable/key</item>

  </style>

  <!-- Application theme. -->
  <style name="AppCyanTheme" parent="AppCyanBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->

    <item name="android:windowBackground">@color/cyan</item>
    <item name="android:textAppearanceLarge">
      @style/textAppearanceLargeBold
    </item>
    <item name="box">@drawable/box_cyan</item>
    <item name="key">@drawable/key_cyan</item>

  </style>

  <!-- Application theme. -->
  <style name="AppMagentaTheme" parent="AppMagentaBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->

    <item name="android:windowBackground">@color/magenta</item>
    <item name="android:textAppearanceLarge">
      @style/textAppearanceLargeBold
    </item>
    <item name="box">@drawable/box_magenta</item>
    <item name="key">@drawable/key_magenta</item>

  </style>

  <!-- Application theme. -->
  <style name="AppOrangeTheme" parent="AppOrangeBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->

    <item name="android:windowBackground">@color/orange</item>
    <item name="android:textAppearanceLarge">
      @style/textAppearanceLargeBold
    </item>
    <item name="box">@drawable/box_orange</item>
    <item name="key">@drawable/key_orange</item>

  </style>

  <!-- Application theme. -->
  <style name="AppPurpleTheme" parent="AppPurpleBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->

    <item name="android:windowBackground">@color/purple</item>
    <item name="android:textAppearanceLarge">
      @style/textAppearanceLargeBold
    </item>
    <item name="box">@drawable/box_purple</item>
    <item name="key">@drawable/key_purple</item>

  </style>

  <!-- Application theme. -->
  <style name="AppRedTheme" parent="AppRedBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->

    <item name="android:windowBackground">@color/red</item>
    <item name="android:textAppearanceLarge">
      @style/textAppearanceLargeBold
    </item>
    <item name="box">@drawable/box_red</item>
    <item name="key">@drawable/key_red</item>

  </style>

  <style name="actionBarCyanStyle"
         parent="android:style/Widget.Holo.ActionBar">

    <item name="android:background">@color/dark_cyan</item>

  </style>

  <style name="actionBarMagentaStyle"
         parent="android:style/Widget.Holo.ActionBar">

    <item name="android:background">@color/dark_magenta</item>

  </style>

  <style name="actionBarOrangeStyle"
         parent="android:style/Widget.Holo.ActionBar">

    <item name="android:background">@color/dark_orange</item>

  </style>

  <style name="actionBarPurpleStyle"
         parent="android:style/Widget.Holo.ActionBar">

    <item name="android:background">@color/dark_purple</item>

  </style>

  <style name="actionBarRedStyle"
         parent="android:style/Widget.Holo.ActionBar">

    <item name="android:background">@color/dark_red</item>

  </style>

  <style name="textAppearanceLargeBold"
         parent="android:style/TextAppearance.Large">

        <item name="android:textStyle">bold</item>

  </style>

</resources>
