<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!--
      Base application theme, dependent on API level. This theme is
      replaced by AppBaseTheme from res/values-vXX/styles.xml on newer
      devices.
  -->
  <style name="AppBaseTheme" parent="android:Theme.Holo">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->
  </style>

  <style name="AppCyanBaseTheme" parent="AppBaseTheme">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->

    <item name="android:actionBarStyle">@style/actionBarCyanStyle</item>

  </style>

  <style name="AppBlueBaseTheme" parent="AppBaseTheme">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->

    <item name="android:actionBarStyle">@style/actionBarBlueStyle</item>

  </style>

  <style name="AppOrangeBaseTheme" parent="AppBaseTheme">
    <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
    -->

    <item name="android:actionBarStyle">@style/actionBarOrangeStyle</item>

  </style>

  <style name="AppPurpleBaseTheme" parent="AppBaseTheme">
    <!-- API 21 theme customizations can go here. -->

    <item name="android:actionBarStyle">@style/actionBarPurpleStyle</item>

  </style>

  <style name="AppRedBaseTheme" parent="AppBaseTheme">
    <!-- API 21 theme customizations can go here. -->

    <item name="android:actionBarStyle">@style/actionBarRedStyle</item>

  </style>

  <!-- Application theme. -->
  <style name="AppTheme" parent="AppBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->

    <item name="android:textAppearanceLarge">
      @style/textAppearanceLargeBold
    </item>

    <item name="box_bgcolour">@color/dark_box_background</item>
    <item name="box_bdcolour">@color/dark_box_border</item>
    <item name="key_normal">@color/dark_key_normal</item>
    <item name="key_pressed">@color/dark_key_pressed</item>

  </style>

  <!-- Application theme. -->
  <style name="AppCyanTheme" parent="AppCyanBaseTheme">
    <!--
        All customizations that are NOT specific to a particular
        API-level can go here.
    -->

    <item name="android:windowBackground">@color/cyan_background</item>
    <item name="android:textAppearanceLarge">
      @style/textAppearanceLargeBold
    </item>

    <item name="box_bgcolour">@color/cyan_box_background</item>
    <item name="box_bdcolour">@color/cyan_box_border</item>
    <item name="key_normal">@color/cyan_key_normal</item>
    <item name="key_pressed">@color/cyan_key_pressed</item>

  </style>

